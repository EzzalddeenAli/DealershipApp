<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="81dp"
        android:layout_weight="1">

    <!--<LinearLayout-->
    <!--android:orientation="vertical"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--android:layout_marginEnd="8dp"-->
    <!--android:gravity="center" app:layout_constraintBottom_toBottomOf="parent"-->
    <!--android:layout_marginBottom="8dp" app:layout_constraintTop_toTopOf="parent"-->
    <!--android:layout_marginTop="8dp" app:layout_constraintStart_toEndOf="@+id/employeeImage"-->
    <!--android:layout_marginStart="8dp" android:id="@+id/linearLayout">-->

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/employeeName"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/employeeJobTitle"
            app:layout_constraintStart_toEndOf="@+id/employeeImage"/>
    <TextView
            android:text="Job Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/employeeJobTitle"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="4dp"
            android:layout_weight="1" app:layout_constraintTop_toBottomOf="@+id/employeeName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp" app:layout_constraintBottom_toTopOf="@+id/employeeEmail"
            app:layout_constraintStart_toEndOf="@+id/employeeImage"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_email_black_24dp"
            android:id="@+id/employeeEmail"
            android:adjustViewBounds="false"
            android:layout_weight="1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employeeJobTitle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:cropToPadding="false" app:layout_constraintStart_toEndOf="@+id/employeeImage"/>
    <!--</LinearLayout>-->
    <ImageView
            app:srcCompat="@drawable/pic1"
            android:id="@+id/employeeImage"
            tools:ignore="MissingConstraints"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:cropToPadding="false"
            app:layout_constraintDimensionRatio="w,1:1"/>
</android.support.constraint.ConstraintLayout>

